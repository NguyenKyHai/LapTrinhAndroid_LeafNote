<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/space"
    tools:context=".ChangeBackgroundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCloseChangeBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/ic_baseline_close_24"/>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Thay đổi nền" />

        <TextView
            android:id="@+id/txtUpdateChangeBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Cập nhật" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Chọn ảnh có sẵn"
                android:textAllCaps="true"
                android:textSize="16dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/radius_white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/bgHeader1"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_weight="0"
                            android:padding="5dp"
                            app:srcCompat="@drawable/bgheader1" />

                        <ImageView
                            android:id="@+id/bgHeader2"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_weight="0"
                            android:padding="5dp"
                            app:srcCompat="@drawable/bgheader2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/bgHeader3"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_weight="0"
                            android:padding="5dp"
                            app:srcCompat="@drawable/bgheader3" />

                        <ImageView
                            android:id="@+id/bgHeader4"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_weight="0"
                            android:padding="5dp"
                            app:srcCompat="@drawable/bgheader4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/bgHeader5"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:padding="5dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/bgheader5" />

                        <ImageView
                            android:id="@+id/bgHeader6"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_weight="0"
                            android:padding="5dp"
                            app:srcCompat="@drawable/bgheader6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/bgHeader7"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_weight="0"
                            android:padding="5dp"
                            app:srcCompat="@drawable/bgheader7" />

                        <ImageView
                            android:id="@+id/bgHeader8"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_weight="0"
                            android:padding="5dp"
                            app:srcCompat="@drawable/bgheader8" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="Chọn ảnh của riêng bạn"
                    android:textAllCaps="true"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:background="@drawable/radius_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="Chọn ảnh từ thiết bị" />

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="right"
                            android:background="@drawable/ic_baseline_navigate_next_24_gray"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="Kích thước đề xuất: 1200 x 675 px." />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text=".jpg hoặc .png, tối đa 5 MB" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>